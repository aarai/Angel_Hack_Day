%h1 Presciption Program Signup

-#
  %table
    %tr
      %th Name
      %th Dob
      %th Address
      %th Email
      %th Phone
      %th
      %th
      %th

    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.dob
        %td= user.address
        %td= user.email
        %td= user.phone
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete 

%br

.btn.btn-success
  = link_to 'Program Signup', new_user_path

- @users.each do |user|
  .btn.btn-warning
    = link_to 'Edit Signup Info', edit_user_path(user)
